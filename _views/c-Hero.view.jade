mixin hero($conference, attrs)
  div.c-Hero&attributes(attrs || {})
    h1.c-PageTitle.c-Hero__Name(itemprop="name")= $conference.name()
    meta(content=$conference.url() itemprop="url")
    p.c-Hero__Detail
      span.c-Hero__Place.h-Clearfix-nsM(itemprop="location"): +promotedLocation($conference.promoLoc())
      span.c-Hero__Dates
        time(datetime=$conference.startDate() itemprop="startDate")
          = Util.monthDay(Util.toDate($conference.startDate()))
        | &ndash;
        time(datetime=$conference.endDate() itemprop="endDate")
          = Util.monthDay(Util.toDate($conference.endDate()))
    p.c-Hero__Blurb.c-Hero__Theme(itemprop="description")
      if $conference.theme()
        = $conference.theme()
      else
        | &nbsp;
    block
