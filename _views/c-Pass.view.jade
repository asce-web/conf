mixin pass(pass, conference)
  - var current_period = conference.currentRegistrationPeriod()
  article.c-Pass
    mixin period-details(reg_period, is_body)
      h1.c-Pass__Period__Hn= reg_period.name
      dl
        each item in pass.getAttendeeTypesAll()
          - var price = 0;
          dt.c-Pass__Attendee= item.name
          dd.c-Pass__Price(class=(is_body && item.is_featured) ? 'c-Pass__Price--featured' : '')
            = price.toLocaleString('en', {style:'currency', currency:'USD'})
    header.c-Pass__Head
      h1.c-Pass__Hn= pass.name
      p.c-Pass__Desc
        = pass.description
        if pass.getFineprint()
          small.c-Pass__Fine.h-Block!= pass.getFineprint(true)
    if current_period
      div.c-Pass__Body
        section.c-Pass__Period
          +period-details(current_period, true)
    footer.o-Flex.c-Pass__Foot
      each item in conference.getRegistrationPeriodsAll()
        unless item === current_period
          section.o-Flex__Item.c-Pass__Period
            +period-details(item, false)
