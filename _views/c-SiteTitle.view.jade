mixin siteTitle(site)
  a.o-GridFloat.c-SiteTitle.c-Camo.h-Block(href=site.getURL())
    span.o-GridFloat__Item.c-SiteTitle__Logo(style='background-image: url(\'' + (site.getLogo() || '') + '\');')
    h1.o-GridFloat__Item.c-SiteTitle__Name= site.getName()
    p.o-GridFloat__Item.c-SiteTitle__Tagline= site.getDescription()
