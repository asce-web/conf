mixin siteTitle(site)
  a.o-GridFloat.c-SiteTitle.c-Camo.h-Block(href=site.url())
    span.o-GridFloat__Item.c-SiteTitle__Logo(style='background-image: url(\'' + (site.logo() || '') + '\');')
    h1.o-GridFloat__Item.c-SiteTitle__Name= site.name()
    p.o-GridFloat__Item.c-SiteTitle__Tagline= site.description()
