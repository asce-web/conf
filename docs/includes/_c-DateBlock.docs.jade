section#date-block
  h2 The Date Block
  p.
    #[strong Note:] the markup below is invalid, as there ae #[code.docs-code li] elements directly
    within a #[code.docs-code dl]. However, this is the only way to structure the microdata properly.
  figure.docs-figure
    include /_views/c-DateBlock.view.jade
    +dateBlock([
      new ImportantDate({name:'Optional Final Papers Due'     , start_time:'2015-10-12'})
    , new ImportantDate({name:'Early-Bird Registration Closes', start_time:'2015-12-17'}).url('#0')
    ])
    +microdataCheckbox('dateblock')
      pre.docs-pre.
        &lt;dl class="o-List  #[u c-DateBlock]"&gt;
          &lt;li class="o-List__Item #[u c-DateBlock__Item]"#[mark.docs-c-Togglable__Text  itemprop="potentialAction" itemscope="" itemtype="http://schema.org/Action"]&gt;
            &lt;dt class="#[u c-DateBlock__Date]"&gt;
              &lt;time datetime="2015-10-12"#[mark.docs-c-Togglable__Text  itemprop="startTime"]&gt;Oct 12, 2015&lt;/time&gt;
            &lt;/dt&gt;
            &lt;dd class="#[u c-DateBlock__Desc]"#[mark.docs-c-Togglable__Text  itemprop="name"]&gt;
              Optional Final Papers Due
            &lt;/dd&gt;
          &lt;/li&gt;
          &lt;li class="o-List__Item #[u c-DateBlock__Item]"#[mark.docs-c-Togglable__Text  itemprop="potentialAction" itemscope="" itemtype="http://schema.org/Action"]&gt;
            &lt;dt class="#[u c-DateBlock__Date]"&gt;
              &lt;time datetime="2015-12-17"#[mark.docs-c-Togglable__Text  itemprop="startTime"]&gt;Dec 17, 2015&lt;/time&gt;
            &lt;/dt&gt;
            &lt;dd class="#[u c-DateBlock__Desc]"#[mark.docs-c-Togglable__Text  itemprop="name"]&gt;
              &lt;a class="#[u c-DateBlock__Link]  h-Block"#[mark.docs-c-Togglable__Text  itemprop="url"]&gt;
                &lt;i class="material-icons"&gt;arrow_forward&lt;/i&gt;
                &lt;span&gt;Early-Bird Registration Closes&lt;/span&gt;
              &lt;/a&gt;
            &lt;/dd&gt;
          &lt;/li&gt;
          &lt;li class="o-List__Item #[u c-DateBlock__Item]"#[mark.docs-c-Togglable__Text  itemprop="potentialAction" itemscope="" itemtype="http://schema.org/Action"]&gt;
            &lt;dt class="#[u c-DateBlock__Date]"&gt;...&lt;/dt&gt;
            &lt;dd class="#[u c-DateBlock__Desc]"#[mark.docs-c-Togglable__Text  itemprop="name"]&gt;...&lt;/dd&gt;
          &lt;/li&gt;
        &lt;/dl&gt;
