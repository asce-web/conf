section#top-menu
  h2 The Top Menu
  p #[strong Note:] Top Menu layout will become vertical when screen is smaller than 720px.
  p Current Year menu item will appear exactly the same as Primary Button, but will not have that class.
  figure.docs-figure
    div(style="margin-bottom: 1.5rem;")
      include /_views/c-MenuTop.view.jade
      +menuTop([
        new ConfPage('About'  , '#0').setIcon('insert_drive_file')
      , new ConfPage('Sponsor', '#0').setIcon('insert_drive_file')
      , new ConfPage('Exhibit', '#0').setIcon('insert_drive_file')
      , new ConfPage('Contact', '#0').setIcon('insert_drive_file')
      ], [
        new ConfPage('Home', '#0').setIcon('insert_drive_file')
      ], 'Current Year')
    ul.o-List.o-Flex.c-MenuTop(style="margin-bottom: 1.5rem;")
      li.o-List__Item.o-Flex__Item.c-MenuTop__Item: a.c-MenuTop__Link.h-Block(href="#0")._hover menu item hover
      li.o-List__Item.o-Flex__Item.c-MenuTop__Item: a.c-MenuTop__Link.h-Block(href="#0")._active menu item active
      li.o-List__Item.o-Flex__Item.c-MenuTop__Item: a.c-MenuTop__Link.h-Block menu item disabled
      li.o-List__Item.o-Flex__Item.c-MenuTop__Item: a.c-MenuTop__Link.h-Block.c-MenuTop__Link--current(href="#0")._hover current year hover
      li.o-List__Item.o-Flex__Item.c-MenuTop__Item: a.c-MenuTop__Link.h-Block.c-MenuTop__Link--current(href="#0")._active current year active
    pre.docs-pre.
      &lt;ul class="o-List  o-Flex  #[u c-MenuTop]"&gt;
        &lt;li class="o-List__Item  o-Flex__Item  #[u c-MenuTop__Item]"&gt;
          &lt;a class="#[u c-MenuTop__Link]  h-Block"&gt;
            &lt;i class="material-icons"&gt;...&lt;/i&gt;
            &lt;span&gt;About&lt;/span&gt;
          &lt;/a&gt;
        &lt;/li&gt;
        ...
        &lt;li class="o-List__Item  o-Flex__Item  #[u c-MenuTop__Item]"&gt;
          &lt;a class="#[u c-MenuTop__Link]  h-Block  #[u c-MenuTop__Link--current]"&gt;
            &lt;i class="material-icons"&gt;...&lt;/i&gt;
            &lt;span&gt;Current Year&lt;/span&gt;
          &lt;/a&gt;
        &lt;/li&gt;
      &lt;/ul&gt;
