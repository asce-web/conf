mixin menuTop(array1, array2, current_text)
  ul.o-List.o-Flex.c-MenuTop
    mixin menuItem(page0, is_current, text)
      li.o-List__Item.o-Flex__Item.c-MenuTop__Item
        +linkWithIcon({
          classes : 'c-MenuTop__Link h-Block' + ((is_current) ? ' c-MenuTop__Link--current' : '')
        , url     : page0.url
        , text    : text
        }, {
          is_on : page0.getIcon()
        , text  : page0.getIcon()
        })
    each page0 in array1
      +menuItem(page0, false, page0.name)
    each page0 in array2
      +menuItem(page0, true, current_text)
