mixin menuUniversal(array1, array2, current_text)
  ul.o-ListBare.o-GridFlex.c-MenuUniversal
    mixin univ_item(page0, is_current, text)
      li.o-GridFlex__Item.c-MenuUniversal__Item
        a.o-Block.c-MenuUniversal__Link(class=((is_current) ? 'c-MenuUniversal__Link--current' : '') href=page0.url)
          if page0.icon
            i.material-icons= page0.icon.content
          span= text
    each page0 in array1
      +univ_item(page0, false, page0.name)
    each page0 in array2
      +univ_item(page0, true, current_text)
