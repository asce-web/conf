mixin menuUniversal(array1, array2, current_text)
  ul.o-List.o-GridFlex.c-MenuUniversal
    mixin univItem(page0, is_current, text)
      li.o-List__Item.o-GridFlex__Item.c-MenuUniversal__Item
        +linkWithIcon({
          classes : 'c-MenuUniversal__Link h-Block' + ((is_current) ? ' c-MenuUniversal__Link--current' : '')
        , url     : page0.url
        , text    : text
        }, {
          is_on : page0.getIcon()
        , text  : page0.getIcon()
        })
    each page0 in array1
      +univItem(page0, false, page0.name)
    each page0 in array2
      +univItem(page0, true, current_text)
