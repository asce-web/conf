mixin siteTitle(site0, url)
  a.o-GridFloat.c-SiteTitle.c-Camo.h-Block(href=url)
    span.o-GridFloat__Item.c-SiteTitle__Logo(style='background-image: url(\'' + (site0.logo || '') + '\');')
    h1.o-GridFloat__Item.c-SiteTitle__Name= site0.name
    p.o-GridFloat__Item.c-SiteTitle__Tagline= site0.tagline
