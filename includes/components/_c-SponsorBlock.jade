mixin sponsorBlock(sponsorlevel, classes)
  section.c-SponsorBlock(class=classes)
    h1.c-SponsorBlock__Hn= sponsorlevel.name
    ul.o-ListBare.o-GridFlex.o-ListStacked
      each item in site.getSupportersAll().filter(function (item) { return item.getLevel() === sponsorlevel })
        li.o-GridFlex__Item.o-ListStacked__Item
          a.c-SponsorBlock__Logo.h-Block(class=sponsorlevel.classname href=item.url style='background-image: url(\'' + (item.img || '') + '\');')= item.name
