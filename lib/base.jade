extends lib.tpl.jade

block append vars
  - var page_id = lib[2]
  - titles.push(page_id.name)
  -
    var classname = {
      figure : 'docs-figure'
    , code   : 'docs-code'
    }

block append main__header
  nav#table-contents
    h2 Table of Contents
    +libtoc({pages: page_id.sub, depth: Infinity})


block append main
  include includes/_base-extension.jade
