section#standard-menu
  h2 The Standard Menu
  figure.docs-figure
    include /includes/components/_c-MenuStandard.jade
    +menuStandard([
      new Page({ name: 'Home'          , url: '#0' })
    , new Page({ name: 'Registration'  , url: '#0' })
    , new Page({ name: 'Program'       , url: '#0' })
    , new Page({ name: 'Hotel & Travel', url: '#0' })
    , new Page({ name: 'Speakers'      , url: '#0' })
    ])
    ul.o-ListBare.o-GridFlex.c-MenuStandard(style="margin-bottom: 1.5rem;")
      li.o-GridFlex__Item.c-MenuStandard__Item._hover: a.o-Block.c-MenuStandard__Link(href="#0")._hover menu item hover
      li.o-GridFlex__Item.c-MenuStandard__Item._hover: a.o-Block.c-MenuStandard__Link(href="#0")._active menu item active
      li.o-GridFlex__Item.c-MenuStandard__Item: a.o-Block.c-MenuStandard__Link menu item disabled
    pre.docs-pre.
      &lt;ul class="o-ListBare  o-GridFlex  #[u c-MenuStandard]"&gt;
        &lt;li class="o-GridFlex__Item  #[u c-MenuStandard__Item]"&gt;
          &lt;a class="o-Block  #[u c-MenuStandard__Link]"&gt;Home&lt;/a&gt;
        &lt;/li&gt;
        ...
      &lt;/ul&gt;
