extends _lib.tpl.jade

block append vars
  - var page = Lib.getPage('obj.html')

block append main
  div.docs-t-Xmeter
    include /node_modules/xmeter/docs/includes/_o-List.docs.jade
    +docs_list(Lib.DOCS_CLASSES)
    include /node_modules/xmeter/docs/includes/_o-Flex.docs.jade
    +docs_flex(Lib.DOCS_CLASSES)
    include /node_modules/xmeter/docs/includes/_o-Grid.docs.jade
    +docs_grid(Lib.DOCS_CLASSES)
  include includes/_o-GridFloat.docs.jade
  include includes/_o-Runner.docs.jade
  include includes/_o-Constrain.docs.jade
  include includes/_o-ListAction.docs.jade
  include includes/_o-ListStacked.docs.jade
  include includes/_o-Drawer.docs.jade

block append scripts
  script.
    $('#drawer-check').change(function () {
      $(this).parents('.docs-c-Togglable').siblings('.o-Drawer').toggleClass('o-Drawer--open')
    })
