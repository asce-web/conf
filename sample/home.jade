extends internal.tpl.jade

block append vars
  - var page = getPage('internal','home.html')

block main-header
  header.o-Runner.o-Runner--pageHeader.c-Banner.c-Banner--home.c-Hero: div.o-ContentWrapper
    +hero-content(conference.current)
    +actionchoices([{text:'Register', href:'registration.html'}, {text:'Sponsor', href:'sponsor.html'}, {text:'Submit a Paper'}], 'c-Btn c-Btn--hilite c-Btn--hero')

block main-minimal
  +minimal-text-block()

block main-rich

block callouts
  aside.o-Runner.o-Runner--highlight.c-Banner: div.o-ContentWrapper
    include includes/highlights/_important-dates.jade
  aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
    include includes/highlights/_registration.jade
  aside.o-Runner.o-Runner--highlight.c-Banner: div.o-ContentWrapper
    include includes/highlights/_program.jade
  aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
    include includes/highlights/_speakers.jade
  aside.o-Runner.o-Runner--highlight.c-Banner: div.o-ContentWrapper
    include includes/highlights/_co-chairs.jade
  aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
    include includes/highlights/_mobile.jade
  aside.o-Runner.o-Runner--highlight.o-Runner--wrappedInner.c-Banner.c-Banner--location: div.o-ContentWrapper
    include includes/highlights/_location.jade
  aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
    include includes/highlights/_social.jade
  aside.o-Runner.o-Runner--highlight.c-Banner: div.o-ContentWrapper
    include includes/highlights/_contact.jade
  aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
    include includes/highlights/_volunteer.jade
