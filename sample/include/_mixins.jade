mixin action-buttons(arr, vanity)
  ul.o-ListBare.o-GridFlex.o-ListStacked
    each str in arr
      li.o-GridFlex__Item.o-ListStacked__Item
        if vanity
          span= str
        else
          a(href="")= str
mixin actionbuttons(arr)
  ul.o-ListBare.o-GridFlex.o-ListStacked
    each obj in arr
      - obj.attrs = obj.attrs || {}
      li.o-GridFlex__Item.o-ListStacked__Item
        a(href=obj.href)&attributes(obj.attrs)= obj.text
