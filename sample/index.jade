extends universal.tpl.jade

block append vars
  - var page_subtype = 'landing'
  - var page_id = sitemap.universal[0]

block main
  section.o-Runner.o-Runner--pageHeader.c-Banner.c-Banner--landing.c-Hero(itemscope="" itemtype="http://schema.org/Event"): div.o-ContentWrapper
    +hero-content(conference.current)
    +actionchoices([{text:'Find Out More', href:'home.html'}], 'c-Btn c-Btn--hilite c-Btn--hero')
    meta(content="http://2016.asceconvention.org/" itemprop="url")
  +minimal-text-block()
  section.o-Runner.o-Runner--highlight.o-Runner--wrappedInner.c-Banner.c-Banner--prev.c-OtherYear(itemscope="" itemtype="http://schema.org/Event"): div.o-ContentWrapper
    div.c-Overlay.c-Overlay--callout
      +otheryear-content(conference.prev)
      p.c-OtherYear__Desc.
        Access the 2015 program to see which sessions qualify for
        PDHs and other documentation.
      +actionchoices([{text:'Event Details', href:'//2015.asceconvention.org/', attrs:{itemprop:'url'}}], 'c-Btn c-Btn--hilite c-Btn--ghost')
  section.o-Runner.o-Runner--highlight.o-Runner--wrappedInner.c-Banner.c-Banner--next.c-OtherYear(itemscope="" itemtype="http://schema.org/Event"): div.o-ContentWrapper
    div.c-Overlay.c-Overlay--callout
      +otheryear-content(conference.next)
      p.c-OtherYear__Desc.
        Plan ahead to attend, sponsor, or exhibit at the
        annual convention for civil engineering professionals.
      +actionchoices([{text:'Event Details', href:'//2017.asceconvention.org/', attrs:{itemprop:'url'}}], 'c-Btn c-Btn--hilite c-Btn--ghost')
  aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
    h1 Sponsors
    +sponsor-content()
