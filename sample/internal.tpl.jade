extends sample.tpl.jade

block append vars
  - var page_type = 'internal'

block title
  title= ((page_subtype === 'home') ? '' : page_name + ' | ') + conference_name

block standard-menu
  header: nav
    h1.-d-n Main Menu
    ul.o-ListBare.o-GridFlex.o-Runner.c-Mast.c-Mast--map.c-MenuStandard
      li.o-GridFlex__Item.c-MenuStandard__Item
        a.o-Block.c-Mast__Link.c-MenuStandard__Link(href="home.html") Home
      li.o-GridFlex__Item.c-MenuStandard__Item
        a.o-Block.c-Mast__Link.c-MenuStandard__Link(href="register.html") Register
        ul.o-ListBare.c-MenuSub(class=(page_name==='Register' ? 'c-MenuSub--active' : ''))
          li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") Why Attend
      li.o-GridFlex__Item.c-MenuStandard__Item
        a.o-Block.c-Mast__Link.c-MenuStandard__Link(href="program.html") Program
        ul.o-ListBare.c-MenuSub(class=(page_name==='Program' ? 'c-MenuSub--active' : ''))
          li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") Events
      li.o-GridFlex__Item.c-MenuStandard__Item
        a.o-Block.c-Mast__Link.c-MenuStandard__Link(href="location.html") Hotel &amp; Travel
        ul.o-ListBare.c-MenuSub(class=(page_name==='Hotel & Travel' ? 'c-MenuSub--active' : ''))
          li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") International Travel
      li.o-GridFlex__Item.c-MenuStandard__Item
        a.o-Block.c-Mast__Link.c-MenuStandard__Link(href="speakers.html") Speakers
        ul.o-ListBare.c-MenuSub(class=(page_name==='Speakers' ? 'c-MenuSub--active' : ''))
          li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") Distinguished Lecture Series

block sitemap-items
  li
    a(href="register.html") Register
    ul.o-ListBare.-pl-1
      li: a(href="") Why Attend
  li
    a(href="program.html") Program
    ul.o-ListBare.-pl-1
      li: a(href="") Events
  li
    a(href="location.html") Hotel &amp; Travel
    ul.o-ListBare.-pl-1
      li: a(href="") International Travel
  li
    a(href="speakers.html") Speakers
    ul.o-ListBare.-pl-1
      li: a(href="") Distinguished Lecture Series
