        +row('1:00 pm', '5:00 pm', 'Optional Tour')
        +row('12:00 pm', '5:00 pm', 'Concurrent Sessions')
        +row('12:00 pm', '5:00 pm', 'Communities and Pavilion')
        +row('12:00 pm', '5:00 pm', 'Concurrent Sessions')
        +row('12:00 pm', '5:00 pm', 'ASCE Luncheon & Closing General Session')
