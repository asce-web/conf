extends internal.tpl.jade

block append vars
  - var page_id = sitemap.internal.program

block main-minimal
  +minimal-text-block()

block main-reference
  section.o-Runner.o-Runner--highlight.c-Banner: div.o-ContentWrapper
    h1.-d-n Full Program
    section.o-GridFlex.c-Overlay.c-Program
      mixin row(start, end, name, href)
        dt.o-GridFlex__Item.c-TimeBlock__Times
          time= start
          | &ndash;
          time= end
        dd.o-GridFlex__Item.c-TimeBlock__Desc
          if href
            a.o-Block.c-TimeBlock__Link(href=href)
              = name
              i.material-icons arrow_forward
          else
            = name
      h1.o-GridFlex__Item.c-Program__Hn Wednesday,#[br]Sep&nbsp;28
      dl.o-GridFlex__Item.o-GridFlex.c-Program__Schedule.c-TimeBlock
        +row('10:00 am', '7:00 pm', 'Registration')
        +row('10:30 am', '4:30 pm', 'Technical Tours', './')
        +row('1:00 pm', '5:00 pm', 'Short Courses', './')
        +row('1:00 pm', '5:00 pm', 'Optional Tours', './')
        +row('5:30 pm', '7:30 pm', 'Opening Welcome Reception')
        +row('12:00 pm', '5:00 pm', 'Community Service Project')
      h1.o-GridFlex__Item.c-Program__Hn Thursday,#[br]Sep&nbsp;29
      dl.o-GridFlex__Item.o-GridFlex.c-Program__Schedule.c-TimeBlock
        +row('7:00 am', '4:30 pm', 'Registration')
        +row('7:30', '8:30 am', 'Student & Emerging Leaders Welcome Breakfast and Orientation')
        +row('1:00 pm', '5:00 pm', 'Opening Plenary Session', './')
        +row('1:00 pm', '5:00 pm', 'Guest Program Orientation & Tour')
        +row('5:30 pm', '7:30 pm', 'Beverage Break')
        +row('12:00 pm', '5:00 pm', 'Concurrent Sessions')
        +row('12:00 pm', '5:00 pm', 'Optional Tour', './')
        +row('12:00 pm', '5:00 pm', 'Industry Leaders Forum', './')
        +row('12:00 pm', '5:00 pm', 'Beverage Break')
        +row('12:00 pm', '5:00 pm', 'Concurrent Sessions')
        +row('12:00 pm', '5:00 pm', 'Theater Night Out')
      h1.o-GridFlex__Item.c-Program__Hn Friday,#[br]Sep&nbsp;30
      dl.o-GridFlex__Item.o-GridFlex.c-Program__Schedule.c-TimeBlock
        +row('7:00 am', '4:30 pm', 'Registration')
        +row('7:30', '8:30 am', 'Leadership & Society Awards Breakfast')
        +row('1:00 pm', '5:00 pm', 'ASCE Annual Business Meeting', './')
