doctype html
html(lang="en")
  head
    block vars
      - var site_title = 'ASCE Convention'
      - var site_tagline = 'The Flagship Event of ASCE'
      - var conference_name = 'ASCE 2016'
      - var conference_theme = 'Engineering > Innovating > Leading'
      - var tag_meta_keywords = ['ASCE', 'civil engineering', 'convention']
    title= tag_title
    meta(charset="utf-8")
    meta(name="description" content=tag_meta_description)
    meta(name="keywords" content=tag_meta_keywords)
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    link(rel="stylesheet" href="../bower_components/xmeter/xmeter.min.css")
    link(rel="stylesheet" href="../bower_components/bangs/bangs.min.css")
    link(rel="stylesheet" href="../styles/conf.css")
    link(rel="stylesheet" href="styles/this.css")
    block style
      style.
        .is-editable {
          background-color: rgba(219, 255, 64, 0.64);
        }
        .is-editable::before {
          content: 'editable content block (no heading)';
          display: block;
          margin-bottom: 1.5rem;
          font-weight: 900;
          text-transform: uppercase;
          color: red;
        }
        section.is-editable {
          background-color: rgba(255, 219, 64, 0.64);
        }
        section.is-editable::before {
          content: 'editable <section> with heading';
        }
  body
    mixin action-buttons(arr, vanity)
      ul.o-ListBare.o-GridFlex.o-ListStacked
        each str in arr
          li.o-GridFlex__Item.o-ListStacked__Item
            if vanity
              span= str
            else
              a(href="")= str
    mixin actionbuttons(arr)
      ul.o-ListBare.o-GridFlex.o-ListStacked
        each obj in arr
          - obj.attrs = obj.attrs || {}
          li.o-GridFlex__Item.o-ListStacked__Item
            a(href=obj.href)&attributes(obj.attrs)= obj.text
    mixin date-place()
      p.o-GridFlex.o-ListStacked.-xjc-c
        span.o-GridFlex__Item.o-Block.o-ListStacked__Item(itemprop="location" itemscope="" itemtype="http://schema.org/PostalAddress")
          span(itemprop="name")
            span(itemprop="addressLocality") Portland, 
            abbr(itemprop="addressRegion" title="Oregon") OR
        span.o-GridFlex__Item.o-Block.o-ListStacked__Item
          time(datetime="2016-09-28" itemprop="startDate") Sep 28
          | &ndash;
          time(datetime="2016-10-01" itemprop="endDate") Oct 1
    mixin important-date-content()
      dl.o-GridFlex.c-DateBlock
        mixin row(year, month, day, datetime, description)
          dt.o-GridFlex__Item: time.o-Block(datetime=datetime)
            span.o-Block= month + ' ' + day
            span.o-Block= year
          dd.o-GridFlex__Item= description
        +row('2015','Oct','12', '2015-10-12','Optional Final Papers Due')
        +row('2015','Dec','17', '2015-12-17','Early-Bird Registration Closes')
        +row('2016','Jan','12', '2016-01-12','Advance Registration Closes')
    mixin registration-content()
      p registration content goes here
    mixin num-speakers(n)
      ul.o-ListBare.o-GridFlex.o-ListSpeakers
        - for (var i = 0; i < n; i++)
          li.o-GridFlex__Item.o-ListSpeakers__Item.c-Speaker
            p.c-Speaker__Name Donna Fulman, P.ASCE
            p.c-Speaker__JobTitle Interior Engineering Administration
            div.o-ListSpeakers__Over.c-Speaker__Desc
              p Tobias van Schneider is an award-winning, German designer raised in Austria and currently living in New York City.
              p Former Lead Product Designer and Art Director at Spotify, he recently founded Semplice and at the same time serves on the AIGA Board of Directors in New York.
              p
                a.c-Speaker__Link(href="") Email
                a.c-Speaker__Link(href="") LinkedIn
                a.c-Speaker__Link(href="") Twitter
    mixin speakers-content()
      +num-speakers(3)
      +action-buttons(['View All Speakers'])
    mixin cochairs-content()
      ul.o-ListBare.o-GridFlex.o-ListStacked
        each val in [1,2]
          li.o-GridFlex__Item.o-ListStacked__Item.c-Speaker
            p.c-Speaker__Name Donald Trump, Ph.D.
            p.c-Speaker__JobTitle Author, #[cite The Art of the Deal]
    mixin program-content()
      mixin program-block(classes, datetext, data)
        section.o-GridFlex__Item(class=classes)
          h1= datetext
          dl.o-GridFlex.c-TimeBlock
            mixin row(starttime, endtime, description)
              dt.o-GridFlex__Item
                span= starttime
                | â€“
                span= endtime
              dd.o-GridFlex__Item= description
            each val in data
              +row(val.starttime, val.endtime, val.description)
      div.o-GridFlex
        +program-block(['o-GridFlex__Item','-w-1o2'], 'Wednesday, April 5', [
          { starttime: '7am', endtime: 'Noon', description: 'General Services Contractor Setup' }
        , { starttime: '8am', endtime: '11pm', description: 'Committee Meetings' }
        , { starttime: 'Noon', endtime: '6pm', description: 'Registration & ASCE Bookstore Hours' }
        ])
        +program-block(['o-GridFlex__Item','-w-1o2'], 'Thursday, April 6', [
          { starttime: '07:00', endtime: '08:00', description: 'Continental Breakfast' }
        , { starttime: '09:30', endtime: '10:00', description: 'Morning Refreshment Break' }
        , { starttime: '18:30', endtime: '20:00', description: 'Welcome Reception' }
        ])
      +action-buttons(['View Full Program'])
    mixin location-content()
      p location content goes here
    mixin contact-content()
      form
        label
          | name
          input(type="text")
        label
          | email
          input(type="email")
        label
          | message
          textarea
        button submit
    mixin sponsor-content()
      mixin sponsor-block(category, category_class, spons)
        section.o-Highlight.c-SponsorBlock(class='c-SponsorBlock--'+category_class)
          h1.o-Highlight__Hn= category
          ul.o-ListBare.o-GridFlex.o-ListSponsors
            each item in spons
              if (category_class !== 'bronze') && (category_class !== 'copper')
                - var logosizes = { premier: 'lrg', platinum: 'lrg', gold: 'med', corporate: 'sml', silver: 'sml' }
                li.o-GridFlex__Item.o-ListSponsors__Item
                  a.o-Block.o-ListSponsors__Logo.c-SponsorBlock__Logo(class='o-ListSponsors__Logo--'+logosizes[category_class] href="" title=item.name style='background-image: url(\'' + item.url + '\');')
              else
                li.o-GridFlex__Item.o-ListSponsors__Item
                  a.o-ListSponsors__Text.c-SponsorBlock__Text(href="")= item.name
      - var sponsors = [ { name: 'Bank of America', url: 'img/logo-bank-america.png' }, { name: 'UPS', url: 'img/logo-ups.png' }, { name: 'Geico', url: 'img/logo-geico.png' } ]
      +sponsor-block('Premier', 'premier', sponsors)
      +sponsor-block('Platinum', 'platinum', sponsors)
      +sponsor-block('Gold', 'gold', sponsors)
      +sponsor-block('Corporate Sponsors', 'corporate', sponsors)
      +sponsor-block('Silver', 'silver', sponsors)
      +sponsor-block('Bronze', 'bronze', sponsors)
      +sponsor-block('Copper', 'copper', sponsors)
    header
      div.o-GridFlex.o-Runner.c-Mast
        a.o-Block.c-Mast__Title.c-Mast__Link(href="index.html")
          h1= site_title
          p= site_tagline
        nav.o-GridFlex.c-Mast__Nav
          ul.o-GridFlex__Item.o-ListBare.o-GridFlex.c-MenuUniversal
            li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-Mast__Link.c-MenuUniversal__Link(href="about.html") About
            li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-Mast__Link.c-MenuUniversal__Link(href="sponsor.html") Sponsor
            li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-Mast__Link.c-MenuUniversal__Link(href="exhibit.html") Exhibit
            li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-Mast__Link.c-MenuUniversal__Link(href="contact.html") Contact
            li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-Mast__Link.c-MenuUniversal__Link.c-MenuUniversal__Link--current(href="home.html") ASCE 2016
          div.o-GridFlex__Item.c-Mast__MenuButtonContainer
            button.c-Mast__MenuButtonContainer__Button menu
      unless page_type === 'landing'
        nav
          ul.o-ListBare.o-GridFlex.o-Runner.c-MenuStandard
            li.o-GridFlex__Item.c-MenuStandard__Item
              a.o-Block.c-MenuStandard__Link(href="home.html") Home
            li.o-GridFlex__Item.c-MenuStandard__Item
              a.o-Block.c-MenuStandard__Link(href="register.html") Register
              ul.o-ListBare.c-MenuSub(class=(page_name==='Register' ? 'c-MenuSub--active' : ''))
                li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") Why Attend
            li.o-GridFlex__Item.c-MenuStandard__Item
              a.o-Block.c-MenuStandard__Link(href="program.html") Program
              ul.o-ListBare.c-MenuSub(class=(page_name==='Program' ? 'c-MenuSub--active' : ''))
                li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") Events
            li.o-GridFlex__Item.c-MenuStandard__Item
              a.o-Block.c-MenuStandard__Link(href="location.html") Hotel &amp; Travel
              ul.o-ListBare.c-MenuSub(class=(page_name==='Hotel & Travel' ? 'c-MenuSub--active' : ''))
                li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") International Travel
            li.o-GridFlex__Item.c-MenuStandard__Item
              a.o-Block.c-MenuStandard__Link(href="speakers.html") Speakers
              ul.o-ListBare.c-MenuSub(class=(page_name==='Speakers' ? 'c-MenuSub--active' : ''))
                li.c-MenuSub__Item: a.o-Block.c-MenuSub__Link(href="") Distinguished Lecture Series
