doctype html
html(lang="en")
  head
    include include/_data.jade
    block vars
    block title
      title
    meta(charset="utf-8")
    meta(name="description" content=page_id.description)
    meta(name="keywords" content=['ASCE', 'civil engineering', 'convention'])
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    link(rel="stylesheet" href="../bower_components/xmeter/xmeter.min.css")
    link(rel="stylesheet" href="../bower_components/bangs/bangs.min.css")
    link(rel="stylesheet" href="../styles/conf.css")
    link(rel="stylesheet" href="styles/this.css")
    block style
      style.
        .minimal-text {
          border: 8px solid rgba(219, 255, 64, 0.64);
        }
        .minimal-text::before {
          content: 'minimal text block (no headings inside)';
          display: block;
          margin-bottom: 1.5rem;
          font-weight: 900;
          text-transform: uppercase;
          color: red;
        }
        .rich-text {
          border: 8px solid rgba(255, 219, 64, 0.64);
        }
        .rich-text::before {
          content: 'rich text block <div> with optional subheadings';
          display: block;
          margin-bottom: 1.5rem;
          font-weight: 900;
          text-transform: uppercase;
          color: red;
        }
  body
    include include/_mixins.jade
    header.o-Runner.c-Mast: div.o-GridFlex.o-ContentWrapper.-xw-n.-xjc-sb.-xai-c
      a.o-GridFlex__Item.o-Block.o-GridFloat.c-SiteTitle(href="index.html")
        span.o-GridFloat__Item.c-SiteTitle__Logo
        h1.o-GridFloat__Item.c-SiteTitle__Name= site.title
        p.o-GridFloat__Item.c-SiteTitle__Tagline= site.tagline
      nav.o-GridFlex__Item.-w-a
        h1.-d-n Top Menu
        ul.o-GridFlex__Item.o-ListBare.o-GridFlex.c-MenuUniversal.-d-n.-d-fx-s52em
          // NOTE: need `.-d-n.-d-fx-sM` for javascript
          li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-MenuUniversal__Link(href="about.html") About
          li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-MenuUniversal__Link(href="sponsor.html") Sponsor
          li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-MenuUniversal__Link(href="exhibit.html") Exhibit
          li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-MenuUniversal__Link(href="contact.html") Contact
          li.o-GridFlex__Item.c-MenuUniversal__Item: a.o-Block.c-MenuUniversal__Link.c-MenuUniversal__Link--current(href="home.html") ASCE 2016
      div.o-GridFlex__Item.-d-n.-d-n-s52em.-w-a.js-hamburgerbutton
        // NOTE: need `.-d-n.-d-n-sM` for javascript
        button(type="button" name="open").c-Btn.c-Btn--drawer menu
        button(type="button" name="close").c-Btn.c-Btn--drawer.c-Btn--drawer--close.-d-n X
    block standard-menu
      //- -
        var standard_menu_class_obj = {
          listclasses : 'o-ListBare o-GridFlex c-MenuStandard'
        , itemclasses : 'o-GridFlex__Item c-MenuStandard__Item'
        , linkclasses : 'o-Block c-MenuStandard__Link'
        , sub: {
          , listclasses : 'o-ListBare c-MenuSub'
          , itemclasses : 'c-MenuSub__Item'
          , linkclasses : 'o-Block c-MenuSub__Link'
          }
        }
      //- unbuffered block code isn’t fucking supported,
      //- so I have to do this:
      - var standard_menu_class_obj = {}
      - standard_menu_class_obj.listclasses = 'o-ListBare o-GridFlex c-MenuStandard'
      - standard_menu_class_obj.itemclasses = 'o-GridFlex__Item c-MenuStandard__Item'
      - standard_menu_class_obj.linkclasses = 'o-Block c-MenuStandard__Link'
      - standard_menu_class_obj.sub = {}
      - standard_menu_class_obj.sub.listclasses = 'o-ListBare c-MenuSub'
      - standard_menu_class_obj.sub.itemclasses = 'c-MenuSub__Item'
      - standard_menu_class_obj.sub.linkclasses = 'o-Block c-MenuSub__Link'
    block dominant
      article&attributes((page_type === 'internal') ? {itemscope:'', itemtype:'http://schema.org/Event'} : {})
        main
          block main-header
            header.o-Runner.o-Runner--pageHeader: div.o-ContentWrapper
              h1.c-PageTitle= page_id.name
          block main-body
            block main-minimal
            block main-reference
            block main-rich
              +rich-text-block()
        div.t-Callouts
          block callouts
          block sponsors
            aside.o-Runner.o-Runner--highlight: div.o-ContentWrapper
              h1 Sponsors
              +sponsor-content()
    block site-map
      //- -
        var sitemap_class_obj = {
          listclasses : 'o-ListBare o-GridFlex c-Sitemap'
        , itemclasses : 'o-GridFlex__Item c-Sitemap__Item'
        , sub: {
          , listclasses : 'o-ListBare c-Sitemap__SubList'
          , itemclasses : 'c-Sitemap__SubItem'
          }
        }
      //- unbuffered block code isn’t fucking supported,
      //- so I have to do this:
      - var sitemap_class_obj = {}
      - sitemap_class_obj.listclasses = 'o-ListBare o-GridFlex c-Sitemap'
      - sitemap_class_obj.itemclasses = 'o-GridFlex__Item c-Sitemap__Item'
      - sitemap_class_obj.sub = {}
      - sitemap_class_obj.sub.listclasses = 'o-ListBare c-Sitemap__SubList'
      - sitemap_class_obj.sub.itemclasses = 'c-Sitemap__SubItem'
    footer.o-Runner.c-Mast.c-Mast--copyright: nav.o-ContentWrapper
      h1.-d-n Connect With #[abbr(title="American Society of Civil Engineers") ASCE]
      address(itemscope="" itemtype="http://schema.org/NGO")
        p
          span.o-Block(itemprop="name") American Society of Civil Engineers
          span.o-Block(itemprop="location" itemscope itemtype="https://schema.org/PostalAddress")
            span.o-Block(itemprop="streetAddress") 1801 Alexander Bell Drive
            span.o-Block
              span(itemprop="addressLocality") Reston, 
              span(itemprop="addressRegion") VA 
              span(itemprop="postalCode") 22901-4382
          span.o-Block(itemprop="contactPoint" itemscope="" itemtype="http://schema.org/ContactPoint")
            a(href="tel:+1-800-548-2723") (800) 548-2723
            meta(content="+1-800-548-2723" itemprop="telephone")
            meta(content="customer support" itemprop="contactType")
          span.o-Block(itemprop="contactPoint" itemscope="" itemtype="http://schema.org/ContactPoint")
            a(href="tel:+1-703-295-6300") +1 (703) 295-6300
            meta(content="+1-703-295-6300" itemprop="telephone")
            meta(content="United States of America" itemprop="areaServed")
            meta(content="customer support" itemprop="contactType")
        p: mark.
          #[strong Note:]
          Each social icon will be a transparent logo in a dark gray background.
          #[code background-color] is white, and secondary color on hover.
          (Use conference color scheme.)
        ul.o-ListBare.o-GridFlex.c-SocialList
          li.o-GridFlex__Item.c-SocialList__Item
            a.o-Block.c-SocialList__Link.c-SocialList__Link--twitter(href="//twitter.com/ASCE" itemprop="sameAs" title="Follow ASCE on Twitter")
          li.o-GridFlex__Item.c-SocialList__Item
            a.o-Block.c-SocialList__Link.c-SocialList__Link--google(href="//plus.google.com/ASCE" itemprop="sameAs" title="Follow ASCE on Google+")
          li.o-GridFlex__Item.c-SocialList__Item
            a.o-Block.c-SocialList__Link.c-SocialList__Link--facebook(href="//facebook.com/ASCE" itemprop="sameAs" title="Follow ASCE on Facebook")
          li.o-GridFlex__Item.c-SocialList__Item
            a.o-Block.c-SocialList__Link.c-SocialList__Link--linkedin(href="//linkedin.com/ASCE" itemprop="sameAs" title="Follow ASCE on LinkedIn")
          li.o-GridFlex__Item.c-SocialList__Item
            a.o-Block.c-SocialList__Link.c-SocialList__Link--youtube(href="//youtube.com/ASCE" itemprop="sameAs" title="Follow ASCE on YouTube")
        //- p: img(src="ASCE-logo.png" itemprop="image")
        p: a(href="http://www.asce.org" itemprop="url").
          &copy; #[time 1996]&ndash;#[time 2016] American Society of Civil Engineers
    script(src="https://code.jquery.com/jquery-2.2.3.min.js" integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=" crossorigin="anonymous")
    script.
      $('.js-hamburgerbutton').removeClass('-d-n')
      $('button[name="open"]').click(function () {
        $('.c-MenuUniversal').removeClass('-d-n -d-fx-s52em')
        $('button[name="close"]').removeClass('-d-n')
      })
      $('button[name="close"]').click(function () {
        $('.c-MenuUniversal').addClass('-d-n -d-fx-s52em')
        $('button[name="close"]').addClass('-d-n')
      })
