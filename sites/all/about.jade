extends _sites.tpl.jade

block append vars
  - var page = site.find('about.html')

block mainReference
  include /_views/_Conference.view.pug
  +otherYear(site.prevConference()).c-Banner--prev
    +highlightButtons([{text:'Event Details', href:site.prevConference().url(), attr:{itemprop:'url'}}], 'c-Btn--ghost c-Btn--ghost--dark')
  +otherYear(site.nextConference()).c-Banner--next
    +highlightButtons([{text:'Event Details', href:site.nextConference().url(), attr:{itemprop:'url'}}], 'c-Btn--ghost c-Btn--ghost--dark')
