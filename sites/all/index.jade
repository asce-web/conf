extends _sites.tpl.jade

block append vars
  - var page = site.find('index.html')

block mainHeader
  header.-d-n: h1 #{site.name()} Homepage

block prepend mainBody
  section.o-Runner.o-Runner--pageHeader.c-Banner.c-Banner--landing: div.o-Constrain
    include /_views/c-Hero.view.jade
    +hero(site.currentConference(), {itemscope:'', itemtype:'http://schema.org/Event'})
      +highlightButtons([{text:'Find Out More', href:'home.html'}], 'c-Btn--primary')
