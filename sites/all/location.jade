extends _sites.tpl.jade

block append varsPage
  - var page = site.findPage('location.html')

block mainHeader
  header.o-Runner.o-Runner--pageHeader.c-Banner.c-Banner--location(style="height: 13.5rem;"): div.o-Constrain
    h1.c-PageTitle.c-PageTitle--special= page.getName()
  section.o-Runner.o-Runner--highlight.-ta-c: div.o-Constrain
    h1.-d-n Important Locations
    ul.o-List.o-ListAction.c-Callout
      each item,index in site.getCurrentConference().getVenuesAll('with_keys')
        li.o-List__Item.o-ListAction__Item.c-Callout__Item: section
          h1= item._key
          +place(item._value, (index===0) ? {itemprop:'location'} : {})
