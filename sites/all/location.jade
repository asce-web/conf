extends _sites.tpl.jade

block append vars
  - var page = site.find('location.html')

block mainHeader
  header.o-Runner.o-Runner--pageHeader.c-Banner.c-Banner--location: div.o-Constrain
    div.c-Hero
      h1.c-Hero__Name.c-PageTitle= page.name()
  section.o-Runner.o-Runner--highlight.-ta-c: div.o-Constrain
    h1.-d-n Important Locations
    ul.o-List.o-ListAction.c-Callout
      each item,key in site.currentConference().getVenuesAll()
        li.o-List__Item.o-ListAction__Item.c-Callout__Item: section
          h1.-fz-el-mega= key
          +place(item, (item===site.currentConference().conferenceVenue()) ? {itemprop:'location'} : {})
