extends _sites.tpl.jade

block append vars
  - var page = site.find('program.html')

block mainReference
  section.o-Runner.o-Runner--highlight.c-Banner#full-program: div.o-Constrain
    h1.h-Hidden Full Program
    - var groupings = site.currentConference().groupSessions(false)
    include /_views/_c-Program.view.pug
    +program(groupings.length, {id:'full-program-block'})
      mixin heading(i)
        +programHeading(groupings[i].datestr)
      mixin content(i)
        include /_views/_c-TimeBlock.view.pug
        +timeBlock(groupings[i].sessions)
    p: small.-fs-t Program subject to change.
