extends _sites.tpl.jade

block append vars
  - var page = site.find('registration.html')

block mainHeader
  header.o-Runner.o-Runner--pageHeader: div.o-Constrain
    //- soft hyphen (U+00ad, `&shy;`)
    h1.c-PageTitle Registra&shy;tion

block mainReference
  section.o-Runner.o-Runner--highlight.c-Banner: div.o-Constrain
    h1.-d-n#full-registration Full Registration
    +passList(site.currentConference(), true)
    ul.o-List.o-ListAction.c-Callout._regLegend
      each $registrationPeriod in site.currentConference().getRegistrationPeriodsAll()
        li.o-List__Item.o-ListAction__Item.c-Callout__Item
          i.material-icons= $registrationPeriod.getIcon()
          small
            -
              var start = $registrationPeriod.startDate()
                , end   = $registrationPeriod.endDate()
              var date_start = Util.toDate(start)
                , date_end   = Util.toDate(end)
            b= $registrationPeriod.name()
            if start && end
              = ': '
              time(datetime=start)= Util.monthDay(date_start)
              | &ndash;
              time(datetime=end)= Util.monthDay(date_end)
            else if start
              = ' begins '
              time(datetime=start)= Util.monthDay(date_start)
            else if end
              = ' ends '
              time(datetime=end)= Util.monthDay(date_end)
    +highlightButtons([{text:'Register Today!', href:'#0'}], 'c-Btn--secondary')
    block additionalInfo
