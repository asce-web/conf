extends _sites.tpl.jade

block append varsPage
  - var page = site.getPage('registration.html')

block mainHeader
  header.o-Runner.o-Runner--pageHeader: div.o-ContentWrapper
    //- soft hyphen (U+00ad, `&shy;`)
    h1.c-PageTitle Registra&shy;tion

block mainReference
  section.o-Runner.o-Runner--highlight.c-Banner: div.o-ContentWrapper
    h1.-d-n#full-registration Full Registration
    +passList(site.getCurrentConference().getPassesAll(), site.getCurrentConference())
    ul.o-List.o-ListAction.c-Callout._regLegend
      each item,index in site.getCurrentConference().getRegistrationPeriodsAll()
        li.o-List__Item.o-ListAction__Item.c-Callout__Item
          i.material-icons= item.getIcon()
          small
            b= item.name
            - var start = Util.toDate(item.startDate)
            - var end   = Util.toDate(item.endDate)
            if item.startDate && item.endDate
              = ': ' + Util.monthDay(start) + 'â€“' + Util.monthDay(end)
            else if item.startDate
              = ' begins ' + Util.monthDay(start)
            else if item.endDate
              = ' ends '   + Util.monthDay(end)
    +highlightButtons([{text:'Register Today!', href:'#0'}], 'c-Btn--secondary')
    block additionalInfo
